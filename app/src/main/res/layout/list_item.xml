<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Temperature"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="57dp"
        android:hint="2018-08-12"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvHighTemperature"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:text="   High"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tvHighTemperature"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:text="33"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvLowTemperature"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="   Low"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true" />

    <TextView

        android:id="@+id/tvLowTemperature"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:text="23"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="126dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="   Link"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:text="    http://......"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="173dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Day Condition: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />


    <TextView

        android:id="@+id/tvDayCondition"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="183dp"
        android:ems="10"
        android:text="Normal"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Night Condition: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/tvNightCondition"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="94dp"
        android:ems="10"
        android:text="Normal"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true" />

</RelativeLayout>